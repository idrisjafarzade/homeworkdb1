

@{
    ViewData["Title"] = "Index";
    HomeVM homeVM = Model;
    AboutImg aboutImg = homeVM.AboutImg;
    AboutText aboutText = homeVM.AboutText;
    List<ExpertPerson> expertPerson = homeVM.ExpertPerson;
    ExpertTitle expertTitle = homeVM.ExpertTitle;
    Background background = homeVM.Backgrounds;
    List<BlogContent> blogContent=homeVM.BlogContents;
    BlogTitle blogTitle=homeVM.BlogTitles;
    List<PersonsAbout> personsAbouts = homeVM.PersonsAbouts;
    List<SliderImgIcons> sliderImgIcons = homeVM.SliderImgIcons;
    List<Category> categories = homeVM.Categories;
    List<Product> products = homeVM.Products;



}


        <!-- SLIDER START -->

        <section id="slider">
            <div class="owl-carousel slider">
                <div> <img src="img/h3-slider-background.jpg" alt=""> </div>
                <div> <img src="img/h3-slider-background-2.jpg" alt=""> </div>
                <div> <img src="img/h3-slider-background-3.jpg" alt=""> </div>
            </div>
            <div class="container context pl-lg-5 ml-lg-3">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="text">
                            <h1>Send <span>flowers</span> like</h1>
                            <h1>you mean it</h1>
                            <p class="text-black-50 d-none d-sm-block">Where flowers are our inspiration to create lasting memories. Whatever the occasion, our flowers will
                                make it special cursus a sit amet mauris. </p>
                        </div>
                        <div class="img">
                            <img src="img/h2-sign-img.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SLIDER END -->

        <!-- PRODUCTS START -->

        <section id="products">
            <div class="container">
                <div class="row pt-5">
                    <div class="col-12 d-flex justify-content-between">
                        <ul class="category-mobile d-md-none list-unstyled">
                            <li>
                                <a href="" class="categories mr-2">Categories</a>
                                <i class="fas fa-caret-down"></i>
                                <ul class="category list-unstyled" style="display: none;">
                                    <li><a href="" data-id="all">All</a></li>
                                    @foreach (var item in categories)
                                   {
                                        <li><a href="" data-id="@item.Name.ToLower()">@item.Name</a></li>
                                   }
                                </ul>
                            </li>
                        </ul>
                        <ul class="category d-none d-md-flex list-unstyled">
                            <li><a href="" data-id="all">All</a></li>
                              @foreach (var item in categories)
                                   {
                                        <li><a href="" data-id="@item.Name.ToLower()">@item.Name</a></li>
                                   }
                                </ul>
                        </ul>
                        <ul class="list-unstyled">
                            <li>
                                <a href="" class="mr-2">Filter</a>
                                <i class="fas fa-caret-down"></i>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                   @foreach (var item in products)
                  {
                       <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@item.Category.Name.ToLower()">
                            <div class="img">
                                <a href="">
                                    <img src="img/@item.Image" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@item.Name</h6>
                            </div>
                            <div class="price">
                               <a asp-controller="Home" asp-action="AddToBasket" asp-route-id="@item.Id">

                               <span class="text-black-50">Add to cart</span>
                               </a> 
                                <span class="text-black-50">@item.Price</span>
                            </div>
                        </div>
                    </div>
                  }
                    
                </div>
            </div>
        </section>

        <!-- PRODUCTS END -->

        <!-- ABOUT START -->
        
        <section id="about">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-lg-6">
                        <div class="img">
                            <img src="img/@aboutImg.Name" class="img-fluid" alt="">
                            <div class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                             @Html.Raw(aboutImg.Icons)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-text mt-5 mt-lg-0 px-lg-5">
                           @Html.Raw(aboutText.Title)
                            <p class="py-3">@aboutText.SubTitle</p>
                            <ul class="list-unstyled">
                                <li class="mt-3"><img src="img/@aboutText.ListSmallImg" class="mr-2" alt="">@aboutText.TextList1</li>
                                <li class="mt-3"><img src="img/@aboutText.ListSmallImg" class="mr-2" alt="">@aboutText.TextList2</li>
                                <li class="mt-3"><img src="img/@aboutText.ListSmallImg" class="mr-2" alt=""> @aboutText.TextList3</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- ABOUT END -->

        <!-- EXPERTS START -->

        <section id="experts">
            <div class="container">
                <div class="row py-5">
                    <div class="offset-lg-3 col-lg-6">
                        <div class="section-title">
                            <h1>@expertTitle.Title</h1>
                            <p class="text-black-50">@expertTitle.SubTitle</p>
                        </div>
                    </div>
                </div>
                <div class="row pb-5">
                    
                  @foreach (var item in expertPerson)
                 {
                     <div class="col-md-6 col-lg-3">
                        <div class="item text-center">
                            <div class="img">
                                <img src="img/@item.ImgName" class="img-fluid rounded-circle" alt="">
                            </div>
                            <div class="text mt-3">
                                <h6>@item.Name</h6>
                                <p class="text-black-50">@item.Position</p>
                            </div>
                        </div>
                    </div>
                 }
                </div>
            </div>
        </section>

        <!-- EXPERTS END -->

        <!-- SUBSCRIBE START -->

        <section id="subscribe" style="background: url(../img/@background.UrlImgName); background-attachment:fixed">
            <div class="container py-5">
                <div class="row py-5">
                    <div class="col-12">
                        <div class="content text-center py-5">
                            <h3>@background.Title</h3>
                            <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                                <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                                <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">Subscribe</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SUBSCRIBE END -->

        <!-- BLOG START -->

        <section id="blog">
            <div class="container">
                <div class="row py-5">
                    <div class="offset-lg-3 col-lg-6">
                        <div class="section-title">
                            <h1>@blogTitle.Title</h1>
                            <p class="text-black-50">@blogTitle.SubTitle</p>
                        </div>
                    </div>
                </div>
                <div class="row pb-5">
                   @foreach (var item in blogContent)
                  {
                      <div class="col-md-6 col-lg-4">
                        <div class="item">
                            <div class="img position-relative">
                                <img src="img/@item.ImgName" class="img-fluid" alt="">
                                <div class="date rounded bg-light position-absolute py-1 px-2">
                                    <span>@item.dateTime.ToLongDateString()</span>
                                </div>
                            </div>
                            <div class="text mt-3 text-center px-5">
                                <h5>@item.Name</h5>
                                <p class="text-black-50">@item.Text
                                    </p>
                            </div>
                        </div>
                    </div>
                  }
                </div>
            </div>
        </section>

        <!-- BLOG END -->

        <!-- SAY START -->

        <section id="say">
            <div class="container">
                <div class="row py-5 justify-content-center">
                    <div class="col-md-8 col-xl-6">
                        <div class="owl-carousel say">
                            @foreach (var item in personsAbouts)
                            {
                                <div>
                                <div class="item text-center">
                                    <div class="img d-flex justify-content-center">
                                        <img src="img/@item.ImgName" alt="">
                                    </div>
                                    <div class="text text-muted pt-3 pb-5">
                                        <i>@item.Text </i>
                                    </div>
                                    <div class="author">
                                        <h6>@item.Name</h6>
                                        <p class="text-black-50">  @item.Position </p>
                                    </div>
                                </div>
                            </div>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SAY END -->

        <!-- INSTAGRAM START -->

        <section id="instagram">
            <div class="owl-carousel instagram">
                @foreach (var item in sliderImgIcons)
               {
                <div><img src="img/@item.ImgName " class="img-fluid" alt=""></div>
                   
               }
            </div>
            <div class="hastag bg-light text-muted py-2 px-3">
                #FIORELLO
            </div>
        </section>

