 @model ExpertPerson
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
             <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Slider Image</h4>
                         <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Photo</th>
                                            <th>Name</th>
                                            <th>Position</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                      <td><img src="~/img/@Model.ImgName" style="width:100px; height:100px"/></td>
                                        <td>@Model.Name</td> 
                                        <td>@Model.Position</td> 
                                  </tr>
                                    </tbody>
                                </table>
                     <form class="forms-sample" method="post" enctype="multipart/form-data">
                      <div class="form-group">
                            <label asp-for="Photo"></label>
                            <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*">
                            <span class="text-danger" asp-validation-for="Photo"></span>
                      </div>
                       <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-Name" placeholder="Name" >
                            <span class="text-danger" asp-validation-for="Name"></span>
                      </div>
                      <div class="form-group">
                            <label asp-for="Position"></label>
                            <input asp-for="Position" class="form-Name" placeholder="Position" >
                            <span class="text-danger" asp-validation-for="Position"></span>
                      </div>
                            <button type="submit" class="btn btn-primary mr-2 ">Submit</button>
                         <a class="btn btn-light"  asp-action="Index">Cancel</a>
                    </form>
                </div>
             </div>
           </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial"/>
}

