@model ExpertPerson
@{
    ViewData["Title"] = "Create";
}

<div class="container">
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Slider Image</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo">Photo</label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="Name">Name</label>
                    <textarea asp-for="Name" class="form-control" placeholder="Name"></textarea>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position">Position</label>
                    <input asp-for="Position" class="form-control" placeholder="Position">
                    <span class="text-danger" asp-validation-for="Position"></span>
                </div>
              
                <button type="submit" class="btn btn-primary mr-2 ">Submit</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </form>
        </div>
        </div>
    </div>
</div>
</div>

@section Scripts{
    <partial name="_ValidationPartial"/>
    <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
    <script>
    ClassicEditor
        .create( document.querySelector( '#Name' ) )
        .catch( error => {
            console.error( error );
        } );
    </script>
}


