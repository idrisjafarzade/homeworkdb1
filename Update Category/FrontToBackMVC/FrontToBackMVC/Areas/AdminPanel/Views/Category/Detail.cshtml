@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
     <div class="row">
         <div class="col-lg-12 grid-margin stretch-card">
             <div class="card">
               <div class="card-body">
                   <h4 class="card-title">Create Category</h4>
                        @if (Model.IsMain == true)
                        {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>Children</th>

                                </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td><img src="~/assets/images/@Model.Image" style="width:100px; height:100px"/></td>
                                <td>@Model.Name</td> 
                                    @foreach (var item in Model.Children)
                                    {
                                        <td>@item.Name</td>
                                    } 
                            </tr>
                            </tbody>
                        </table>
                        }
                        else
                        {
                                <table class="table">
                            <thead>
                                <tr>
                                    <th>Parent Name</th>
                                    <th>Name</th>

                                </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>@Model.Parent.Name</td>
                                <td>@Model.Name</td> 
                            </tr>
                            </tbody>
                            </table>
                        }
                   </div>
             </div>
         </div>
    </div>
</div>
