@model Category
@{
    ViewData["Title"] = "Update";
}
<div class="container">
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>
                        @if (Model.IsMain == true)
                        {
                       <table class="table">
                            <thead>
                                <tr>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>Children</th>

                                </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td><img src="~/assets/images/@Model.Image" style="width:100px; height:100px"/></td>
                                <td>@Model.Name</td> 
                                    @foreach (var item in Model.Children)
                                    {
                                        <td>@item.Name</td>
                                    } 
                            </tr>
                            </tbody>
                       </table>
                             <form class="forms-sample" method="post" enctype="multipart/form-data">
                             <div class="text-danger" asp-validation-summary=ModelOnly></div>
                                  <div class="form-group" >
                                        <label asp-for="Photo">Photo</label>
                                        <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*">
                                        <span class="text-danger" asp-validation-for="Photo"></span>
                                  </div>
                                   <div class="form-group " >
                                        <label asp-for="Name">Name</label>
                                        <input asp-for="Name" class="form-control" placeholder="Name"/>
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                  </div>    
                                
                                          <button type="submit" class="btn btn-primary mr-2 ">Submit</button>
                                          <a class="btn btn-light"  asp-action="Index">Cancel</a>
                                 </form>
                        }
                        else
                        {
                             <table class="table">
                            <thead>
                                <tr>
                                    <th>Parent Name</th>
                                    <th>Name</th>

                                </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>@Model.Parent.Name</td>
                                <td>@Model.Name</td> 
                            </tr>
                            </tbody>
                          </table>
                           <form class="forms-sample" method="post">
                           <div class="text-danger" asp-validation-summary=ModelOnly></div>
                           <div class="form-group" >
                                <label asp-for="Parent">Parent</label>
                                <select class="form-control" name="parentCategoryId">
                                    <option value="0">--Select Category--</option>
                                    @foreach (var item in ViewBag.ParentCategoriesUpdate)
                                    {
                                        <option value="@item.id">@item.Name</option>
                                    }
                                </select>
                            </div>
                              <div class="form-group " >
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name"/>
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                                      <button type="submit" class="btn btn-primary mr-2 ">Submit</button>
                                     <a class="btn btn-light"  asp-action="Index">Cancel</a>
                              </form>
                        }
        </div>
        </div>
    </div>
</div>
</div>
    <partial name="_ValidationPartial" />
