@model List<SliderImgIcons>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
  <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
             <div class="card">
                 <div class="card-body">
                     <h4 class="card-title">Basic Table</h4>
                          <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                           @foreach (var item in Model)
                                          {
                                               <tr>
                                                <td><img src="~/img/@item.ImgName" style="width:100px; height:100px"/></td>
                                                 <td>
                                                    <a class="btn-success"  asp-action="Details" asp-route-id="@item.Id">Details </a> 
                                                    <a class="btn-dark"  asp-action="Update" asp-route-id="@item.Id">Update </a>
                                                    <a class="btn-danger"  asp-action="Delete" asp-route-id="@item.Id">Delete </a>
                                                </td>
                                            </tr>
                                          }
                                    </tbody>
                                </table>
                             </div>
                         </div>
                     </div>
                </div>
            </div>
        </div>
</div>
